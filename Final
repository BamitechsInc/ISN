from turtle import*
txt,color,bld=input("Inscrivez votre message (majuscules uniquement)"),input("Entrez une couleur"),int(input("Entrez une épaisseur de trait"))
i=0
pencolor(color)
speed('fastest')

width(bld)
up()
goto(-600,0)
ht()
while i<len(txt) :
    if txt[i]==' ':
        forward(70)
    elif txt[i]=='A':
        up()
